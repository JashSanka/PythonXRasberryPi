{
"version": "0.2.0",
"configurations": [
{
"name": "Python: Run test.py",
"type": "debugpy",
"request": "launch",
"program": "${workspaceFolder}/test.py",
"console": "integratedTerminal",
"justMyCode": false
},
{
"name": "C++ (LLDB): Debug Python with extension module",
"type": "cppdbg",
"request": "launch",
"program": "/usr/bin/python3",
"args": ["${workspaceFolder}/test.py"],
"stopAtEntry": false,
"cwd": "${workspaceFolder}",
"MIMode": "lldb",
"miDebuggerPath": "/usr/bin/lldb",
"preLaunchTask": "build: pybind11 (inplace)",
"setupCommands": [
{
"description": "Enable pretty printing for lldb",
"text": "settings set target.inline-breakpoint-commands true",
"ignoreFailures": true
}
],
"externalConsole": false
}
]
}